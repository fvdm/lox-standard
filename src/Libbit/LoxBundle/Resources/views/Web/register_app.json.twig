{
    "BaseUrl"   : "{{ url('libbit_lox_index') }}",
    "Name"      : "{{ application_title }}",
    "User"      : "{{ app.user.username }}",
    "LogoUrl"   : "{{ app.request.getSchemeAndHttpHost() }}{{ asset('')}}{{ application_logo }}",
    "BackColor" : "{{ app_backcolor }}",
    "FontColor" : "{{ app_fontcolor }}",
    "pin_cert"  : "{{ pin_cert }}",
    "APIKeys"   : [
        {% for client in clients %}
            {
                "Name"   : "{{ client.name }}",
                "Key"    : "{{ client.publicId }}",
                "Secret" : "{{ client.secret }}"
            }
            {% if loop.last == false %}
                ,
            {% endif %}
        {% endfor %}
    ]
}
