<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rednose_lox.exception.listener.class">Rednose\LoxBundle\EventListener\ExceptionListener</parameter>
        <parameter key="rednose_lox.notification.consumer.logger.class">Rednose\LoxBundle\Consumer\LoggerConsumer</parameter>
        <parameter key="rednose_lox.notification.consumer.push_notification.class">Rednose\LoxBundle\Consumer\PushNotificationConsumer</parameter>
    </parameters>

    <services>
        <service id="rednose_lox.exception.listener" class="%rednose_lox.exception.listener.class%">
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
            <argument type="service" id="service_container" />
        </service>

        <service id="rednose_lox.notification.consumer.push_notification" class="%rednose_lox.notification.consumer.push_notification.class%">
            <tag name="sonata.notification.consumer" type="rednose_lox_push_notification" />
            <argument type="service" id="logger" />
            <argument type="service" id="rms_push_notifications"/>
        </service>

        <service id="directory_namer.dir_path" class="Rednose\LoxBundle\Namer\DirectoryNamer">
            <argument>name</argument>
            <argument>namer</argument>
        </service>

    </services>
</container>
