<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rednose_lox.listener.shared_item.class">Rednose\LoxBundle\EventListener\SharedItemListener</parameter>
        <parameter key="rednose_lox.listener.item_root.class">Rednose\LoxBundle\EventListener\ItemRootListener</parameter>
        <parameter key="rednose_lox.listener.invitation_group.class">Rednose\LoxBundle\EventListener\InvitationGroupListener</parameter>
        <parameter key="rednose_lox.listener.web_notification.class">Rednose\LoxBundle\EventListener\WebNotificationListener</parameter>
        <parameter key="rednose_lox.listener.mail_notification.class">Rednose\LoxBundle\EventListener\MailNotificationListener</parameter>
        <parameter key="rednose_lox.listener.push_notification.class">Rednose\LoxBundle\EventListener\PushNotificationListener</parameter>
        <parameter key="rednose_lox.listener.item_serialize.class">Rednose\LoxBundle\EventListener\ItemSerializeListener</parameter>
        <parameter key="rednose_lox.listener.share_serialize.class">Rednose\LoxBundle\EventListener\ShareSerializeListener</parameter>
    </parameters>

    <services>

        <service id="rednose_lox.listener.item_root" class="%rednose_lox.listener.item_root.class%">
            <argument type="service" id="rednose_lox.item_manager" />
            <tag name="kernel.event_subscriber" />
        </service>

        <!-- Trigger the shared_item listener first because the notification listeners depend on it. -->
        <service id="rednose_lox.listener.shared_item" class="%rednose_lox.listener.shared_item.class%">
            <argument type="service" id="rednose_lox.item_manager" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="rednose_lox.listener.item_root" class="%rednose_lox.listener.item_root.class%">
            <argument type="service" id="rednose_lox.item_manager" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="rednose_lox.listener.invitation_group" class="%rednose_lox.listener.invitation_group.class%">
            <argument type="service" id="rednose_lox.share_manager" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="rednose_lox.listener.web_notification" class="%rednose_lox.listener.web_notification.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="rednose_lox.listener.mail_notification" class="%rednose_lox.listener.mail_notification.class%">
            <argument type="service" id="mailer" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="rednose_lox.listener.push_notification" class="%rednose_lox.listener.push_notification.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="security.context"/>
            <argument type="service" id="sonata.notification.backend"/>
            <argument type="service" id="translator"/>
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="rednose_lox.listener.item_serialize" class="%rednose_lox.listener.item_serialize.class%">
            <argument type="service" id="rednose_lox.item_manager" />
            <argument type="service" id="security.context"/>
            <argument type="service" id="rednose_framework.datetime_formatter"/>
            <tag name="jms_serializer.event_subscriber" event="serializer.post_serialize" method="onPostSerialize" priority="-64" />
            <tag name="jms_serializer.event_subscriber" event="serializer.pre_serialize" method="onPreSerialize" priority="-64" />
        </service>
    </services>
</container>
